           <module>sts</module>
           <module>websso</module>
           <module>ims-stub</module>
           <module>service</module>
         </modules>
    </profile>

    <profile>
         <id>lightwave</id>
         <activation>
           <activeByDefault>true</activeByDefault>
           <property>
             <name>PRODUCT_NAME</name>
             <value>vmware-sts</value>
           </property>
         </activation>
         <properties>
           <PRODUCT_NAME>vmware-sts</PRODUCT_NAME>
           <packageDir>./build/${PRODUCT_NAME}/packages</packageDir>
           <publishDir>./build/${PRODUCT_NAME}/publish</publishDir>
           <distDir>./build/${PRODUCT_NAME}/dist</distDir>
           <cleanDirectory>${basedir}/build/${PRODUCT_NAME}/</cleanDirectory>
         </properties>
         <modules>
           <module>jdepends</module>
           <module>diagnostics</module>
           <module>platform</module>
           <module>idm</module>
           <module>commons</module>
           <module>ssolib</module>
           <module>samlauthority</module>
           <module>tomcat-extensions</module>
           <module>install</module>
           <module>wsTrustClient</module>
           <module>rest</module>
           <module>sts</module>
           <module>openidconnect</module>
           <module>websso</module>
           <module>lightwaveui</module>
           <module>sso-config</module>
           <module>service</module>
