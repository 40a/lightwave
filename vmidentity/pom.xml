    <plugins>
       <plugin>
          <artifactId>maven-clean-plugin</artifactId>
          <version>3.0.0</version>
          <inherited>false</inherited>
          <configuration>
             <filesets>
                <fileset>
                   <directory>${cleanDirectory}</directory>
                </fileset>
             </filesets>
          </configuration>
       </plugin>
    </plugins>
  </build>

