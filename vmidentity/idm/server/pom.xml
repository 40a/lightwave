<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.vmware.identity.idm</groupId>
    <artifactId>vmware-identity-idm</artifactId>
    <version>6.6.3</version>
  </parent>

  <artifactId>vmware-identity-idm-server</artifactId>
  <version>6.6.3</version>
  <packaging>jar</packaging>
  <name>vmware-identity-idm-server</name>

  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.plugin.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${maven.jar.plugin.version}</version>
        <configuration>
          <archive>
            <manifestFile>${manifestPath}</manifestFile>
          </archive>
          <outputDirectory>${outputDirectory}</outputDirectory>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-install-plugin</artifactId>
         <version>2.5.1</version>
         <configuration>
            <file>${outputDirectory}/vmware-identity-idm-server.jar</file>
         </configuration>
         <executions>
           <execution>
            <goals>
              <goal>install</goal>
            </goals>
            <phase>package</phase>
           </execution>
         </executions>
      </plugin>

      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-source-plugin</artifactId>
        <configuration>
          <outputDirectory>${outputDirectory}</outputDirectory>
        </configuration>
	<executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven.surefire.plugin.version}</version>
        <configuration>
          <skipTests>${skip.unit.tests}</skipTests>
        </configuration>
      </plugin>
       <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <version>2.6</version>
          <executions>
            <execution>
              <id>copy-resources</id>
              <phase>package</phase>
              <goals>
                 <goal>copy-resources</goal>
              </goals>
              <configuration>
                <outputDirectory>${classesOutputDirectory}</outputDirectory>
                <resources>
                  <resource>
                    <directory>${basedir}/target/classes/</directory>
                    <filtering>true</filtering>
                  </resource>
                </resources>
              </configuration>
            </execution>
           </executions>
       </plugin>
    </plugins>
  </build>

  <dependencies>


    <!-- Vmware Dependencies -->
    <dependency>
      <groupId>com.vmware.identity</groupId>
      <artifactId>vmware-identity-diagnostics</artifactId>
      <version>${vmware.version}</version>
    </dependency>
    <dependency>
      <groupId>com.vmware.identity</groupId>
      <artifactId>vmware-identity-platform</artifactId>
      <version>${vmware.version}</version>
    </dependency>

    <dependency>
      <groupId>com.vmware.identity.idm</groupId>
      <artifactId>vmware-identity-idm-interface</artifactId>
      <version>${vmware.version}</version>
    </dependency>
    <dependency>
      <groupId>com.vmware.identity</groupId>
      <artifactId>authentication-framework</artifactId>
      <version>${vmware.version}</version>
    </dependency>

    <dependency>
      <groupId>com.vmware.identity</groupId>
      <artifactId>afd-heartbeat-service</artifactId>
      <version>${vmware.version}</version>
    </dependency>
    <dependency>
      <groupId>com.vmware.identity</groupId>
      <artifactId>vmware-vmca-client</artifactId>
      <version>${vmware.version}</version>
    </dependency>

    <!-- Common  Dependencies -->
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>${commons.logging.version}</version>
    </dependency>

    <dependency>
      <groupId>net.sourceforge.cobertura</groupId>
      <artifactId>cobertura</artifactId>
      <version>${cobertura.version}</version>
    </dependency>

    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>${commons.lang.version}</version>
    </dependency>
    <dependency>
      <groupId>commons-daemon</groupId>
      <artifactId>commons-daemon</artifactId>
      <version>${commons.daemon.version}</version>
    </dependency>
    <dependency>
        <groupId>org.apache.commons</groupId>
        <artifactId>commons-pool2</artifactId>
        <version>${commons.pool2.version}</version>
    </dependency>


    <!-- Bouncy Castle dependencies -->
      <dependency>
        <groupId>org.bouncycastle</groupId>
        <artifactId>bcprov-jdk15on</artifactId>
        <version>${bouncycastle.version}</version>
      </dependency>
      <dependency>
        <groupId>org.bouncycastle</groupId>
        <artifactId>bcpkix-jdk15on</artifactId>
        <version>${bouncycastle.version}</version>
      </dependency>

     <!-- Jna dependencies -->

    <dependency>
      <groupId>net.java.dev.jna</groupId>
      <artifactId>jna</artifactId>
      <version>${net.dev.jna}</version>
    </dependency>
    <dependency>
      <groupId>net.java.dev.jna</groupId>
      <artifactId>platform</artifactId>
      <version>${net.dev.jna}</version>
    </dependency>

    <!-- Logger Dependencies -->
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
      <version>${apache.log4j.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
      <version>${apache.log4j.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-1.2-api</artifactId>
      <version>${log4j.12.api.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-slf4j-impl</artifactId>
      <version>${apache.log4j.version}</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
      <version>${slf4j.version}</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>

 </dependencies>

 <properties>
    <skip.unit.tests>false</skip.unit.tests>
    <outputDirectory>${basedir}/../../build/vmware-sts/packages</outputDirectory>
    <classesOutputDirectory>${basedir}/../../build/vmware-sts/vmware-identity-idm-server/classes</classesOutputDirectory>
    <manifestPath>src/main/resources/MANIFEST.MF</manifestPath>
 </properties>

</project>
